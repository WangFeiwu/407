<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.flydou.rubbish407.dao.TeacherCourse">
	<resultMap type="cn.flydou.rubbish407.entity.Course" id="List_course">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="courseName" jdbcType="VARCHAR" property="courseName" />
		<result column="courseRoom" jdbcType="VARCHAR" property="courseRoom" />
		<result column="courseTime" jdbcType="VARCHAR" property="courseTime" />
		<result column="courseType" jdbcType="VARCHAR" property="courseType" />
	</resultMap>

	<select id="showCourse" parameterType="INTEGER" resultMap="List_course">
		select * from course where id = #{id}
	</select>

	<insert id="insertNewCourse" parameterType="cn.flydou.rubbish407.entity.Course" useGeneratedKeys="true" keyProperty="id" >
		insert into course values
(#{id},#{courseName},#{courseRoom},#{courseTime},#{courseType})
	</insert>

	<delete id="deleteCourseById" parameterType="cn.flydou.rubbish407.entity.Course" flushCache="true">
		delete from course where id = #{id}
	</delete>


	<update id="updateCourse" parameterType="cn.flydou.rubbish407.entity.Course" resultMap="List_course">
		update course set courseName = #{new_courseName},courseRoom =#{new_courseRoom},courseTime =#{new_courseTime},courseType =#{new_courseType} where id = #{id}
	</update>
</mapper>